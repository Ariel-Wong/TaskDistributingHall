<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CollectInformation">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="完善资料"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toRightOf="@id/name_edit"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:text="昵称    :"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@id/name_edit"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/name_text"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName" />



    <TextView
        android:id="@+id/address_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_text"
        app:layout_constraintLeft_toRightOf="@id/address_edit"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="地址  :"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintBaseline_toBaselineOf="@id/address_edit"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/address_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/address_text"
        app:layout_constraintTop_toBottomOf="@id/name_edit"
        app:layout_constraintHorizontal_weight="4"
        android:layout_marginStart="8dp"
        android:ems="10"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text" />

    <TextView
        android:id="@+id/grade_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_edit"
        app:layout_constraintLeft_toRightOf="@id/grade_edit"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="年级   :"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="15dp"

        app:layout_constraintBaseline_toBaselineOf="@id/grade_edit"
        app:layout_constraintHorizontal_weight="2"/>

    <EditText
        android:id="@+id/grade_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/grade_text"
        app:layout_constraintTop_toBottomOf="@id/address_edit"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="text"
         />

    <TextView
        android:id="@+id/dept_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grade_edit"
        app:layout_constraintLeft_toRightOf="@id/dept_edit"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="学院   :"
        android:textStyle="bold"
        android:textSize="15dp"

        app:layout_constraintBaseline_toBaselineOf="@id/dept_edit"
        app:layout_constraintHorizontal_weight="2"/>
    <EditText
        android:id="@+id/dept_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/dept_text"
        app:layout_constraintTop_toBottomOf="@id/grade_edit"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="text"
        />

    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/dept_text"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="性别    :"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textColor="#FF7F50"
                />
            <RadioButton
                android:id="@+id/women"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textColor="#FF7F50"
                />
        </RadioGroup>

    </LinearLayout>


    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lin4"/>

</androidx.constraintlayout.widget.ConstraintLayout>